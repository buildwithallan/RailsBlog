<div class="container-fluid mt-3">

<h1>Category: <%= @blog.category.category %></h1>
	
<h3><%= @blog.title %></h3>

<p><%= @blog.content %></p>
<table>
	<tbody>
		<td><%= link_to "Edit", edit_blog_path(@blog.id), class: 'btn btn-primary' %></td>
		<td><%= button_to "Delete", blog_path(@blog.id), method: :delete, class: 'btn btn-danger' %></td>
		<td><%= link_to "Back", blogs_path, class: 'btn btn-secondary' %></td>
	</tbody>
</table>

</div>
